<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/historyBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/history"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:padding="@dimen/medium_margin"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Varža:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_L"
            android:gravity="center"
            android:fontFamily="@font/inter_semibold"/>

        <TextView
            android:id="@+id/powerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ohm "
            android:textColor="@color/green"
            android:textSize="@dimen/text_L"
            android:gravity="center"
            android:textStyle="italic"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginStart="@dimen/small_margin"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/bg_gradient_line"/>

    <FrameLayout
        android:id="@+id/resistorBaseImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/large_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/image_resistor"
            android:contentDescription="@string/app_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="top|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="@dimen/text_S"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textSize="@dimen/text_S"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/textC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="@dimen/text_S"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:textSize="@dimen/text_S"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E"
                android:textSize="@dimen/text_S"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/textF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:textSize="@dimen/text_S"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <View
                android:id="@+id/ringA"
                android:layout_width="@dimen/resistor_band_width"
                android:layout_height="@dimen/resistor_band_height"
                android:background="@color/resistor_red"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

            <View
                android:id="@+id/ringB"
                android:layout_width="@dimen/resistor_band_width"
                android:layout_height="@dimen/resistor_band_height"
                android:background="@color/resistor_orange"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

            <View
                android:visibility="gone"
                android:id="@+id/ringC"
                android:layout_width="@dimen/resistor_band_width"
                android:layout_height="@dimen/resistor_band_height"
                android:background="@color/resistor_yellow"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

            <View
                android:id="@+id/ringD"
                android:layout_width="@dimen/resistor_band_width"
                android:layout_height="@dimen/resistor_band_height"
                android:background="@color/resistor_brown"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

            <View
                android:id="@+id/ringE"
                android:layout_width="@dimen/resistor_band_width"
                android:layout_height="@dimen/resistor_band_height"
                android:background="@color/resistor_green"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

            <View
                android:visibility="gone"
                android:id="@+id/ringPPM"
                android:layout_width="@dimen/resistor_band_width"
                android:layout_height="@dimen/resistor_band_height"
                android:background="@color/resistor_blue"
                android:layout_marginHorizontal="@dimen/resistor_band_distance"/>

        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/bandNrText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Žiedų skaičius:"
        android:textColor="@color/black"
        android:textSize="@dimen/text_XM"
        android:gravity="center"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginStart="@dimen/large_margin"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/large_margin"
        android:layout_marginVertical="@dimen/normal_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="3">

        <RadioButton
            android:id="@+id/band4RadioBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/radio_button_height"
            android:layout_weight="1"
            android:background="@drawable/btn_radio"
            android:button="@android:color/transparent"
            android:checked="true"
            android:gravity="center"
            android:text="Keturi"
            android:textColor="@color/radio_text_selector"
            android:textSize="@dimen/text_M"
            android:fontFamily="@font/inter_medium"
            android:layout_marginEnd="@dimen/normal_margin"/>

        <RadioButton
            android:id="@+id/band5RadioBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/radio_button_height"
            android:layout_weight="1"
            android:background="@drawable/btn_radio"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:text="Penki"
            android:textColor="@color/radio_text_selector"
            android:textSize="@dimen/text_M"
            android:fontFamily="@font/inter_medium"
            android:layout_marginEnd="@dimen/normal_margin"/>

        <RadioButton
            android:id="@+id/band6RadioBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/radio_button_height"
            android:layout_weight="1"
            android:background="@drawable/btn_radio"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:text="Šeši"
            android:textColor="@color/radio_text_selector"
            android:textSize="@dimen/text_M"
            android:fontFamily="@font/inter_medium"/>

    </RadioGroup>

    <LinearLayout
        android:id="@+id/spinnersLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/selectALayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/large_margin">

            <TextView
                android:id="@+id/bandAText"
                style="@style/SpinnerTextStyle"
                android:text="Žiedas A:"/>

            <com.example.apppojektas.CustomSpinner
                android:id="@+id/spinner_colors_A"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:dropDownVerticalOffset="40dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/selectBLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:layout_marginTop="@dimen/half_margin">

            <TextView
                android:id="@+id/bandBText"
                style="@style/SpinnerTextStyle"
                android:text="Žiedas B:" />

            <com.example.apppojektas.CustomSpinner
                android:id="@+id/spinner_colors_B"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:dropDownVerticalOffset="40dp"
                />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/selectCLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:layout_marginTop="@dimen/half_margin">

            <TextView
                android:id="@+id/bandCText"
                style="@style/SpinnerTextStyle"
                android:text="Žiedas C:"/>

            <com.example.apppojektas.CustomSpinner
                android:id="@+id/spinner_colors_C"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:dropDownVerticalOffset="40dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/selectDLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:layout_marginTop="@dimen/half_margin">

            <TextView
                android:id="@+id/bandDText"
                style="@style/SpinnerTextStyle"
                android:text="Žiedas D:"/>

            <com.example.apppojektas.CustomSpinner
                android:id="@+id/spinner_colors_D"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:dropDownVerticalOffset="40dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/selectELayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:layout_marginTop="@dimen/half_margin">

            <TextView
                android:id="@+id/bandEText"
                style="@style/SpinnerTextStyle"
                android:text="Žiedas E:"/>

            <com.example.apppojektas.CustomSpinner
                android:id="@+id/spinner_colors_E"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:dropDownVerticalOffset="40dp"
                />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/selectPPMLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:layout_marginTop="@dimen/half_margin">

            <TextView
                android:id="@+id/bandPPMText"
                style="@style/SpinnerTextStyle"
                android:text="Žiedas PPM:"/>

            <com.example.apppojektas.CustomSpinner
                android:id="@+id/spinner_colors_PPM"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:dropDownVerticalOffset="40dp"
                />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

            <Button
                android:id="@+id/calculateBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/bg_button_green"
                android:fontFamily="@font/inter_semibold"
                android:text="Skaičiuoti"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_XM"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/large_margin"
                android:layout_marginHorizontal="@dimen/large_margin"/>

    </LinearLayout>

</LinearLayout>
